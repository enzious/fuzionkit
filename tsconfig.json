{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "sourceMap": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "./*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": []
}
